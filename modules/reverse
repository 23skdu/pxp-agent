#!/usr/bin/env ruby
require 'json'

def action_metadata
   metadata = {
    :description => "schema test",
    :actions => [
      { :name => "string",
        :description => "reverses a string",
        :input => {
          :type => "object",
          :properties => {
            :argument => {
              :type => "string",
            },
          },
          :required => [ :argument ],
        },
        :output => {
          :type => "object",
          :properties => {
            :output => {
              :type => "string",
            },
          },
          :required => [ :output ],
        },
      },
      { :name => "hash",
        :description => "reverses an element of a hash",
        :input => {
          :type => "object",
          :properties => {
            :input => {
              :type => 'string',
            },
          },
          :required => [ :input ],
        },
        :output => {
          :type => "object",
          :properties => {
            :input => {
              :type => 'string',
            },
            :output => {
              :type => 'string',
            },
          },
          :required => [ :input, :output ],
        },
      },
    ],
  }

  puts metadata.to_json
end

def action_string
  params = JSON.load($stdin)["params"]
  output = { :output => params['argument'].reverse }
  puts output.to_json
end

def action_hash
  hash = JSON.load($stdin)["params"]
  hash['output'] = hash['input'].reverse
  puts hash.to_json
end

action = ARGV.shift || 'metadata'

Object.send("action_#{action}".to_sym)
